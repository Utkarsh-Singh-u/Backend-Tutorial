<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>
<body>
   <div class="w-full h-full bg-zinc-900 p-10 text-white">
    <a href="/" class="text-blue-500">Back To HOME</a>
    <h1 class="text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
    <div class="users flex gap-3 flex-wrap">
      <% if(users.length > 0){ %>
        <% users.forEach(function (user){ %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
              <img src="<%= user.image %>" class="w-full h-full object-cover" alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3">
              <a href="/edit/<%=  user._id %>" class="text-zinc-300">Edit User</a>
              <a href="/delete/<%= user._id %>" class="text-red-500">Delete User</a>
            </div>
          </div>
        <% }) %>
      <% }else{ %>
         <h3 class="text-zinc-500">No Users Yet.</h3>
      <% } %>
      
    </div>
   </div>
</body>
</html>